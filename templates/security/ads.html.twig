{% extends 'base.html.twig' %}
{% block title %}Mes annonces{% endblock %}

{% block body %}
<main class="__main">
    <div class="__items">
        <h4 class="__myPolice" style="text-align: center;">Vos annonces <span class="badge bg-danger">{{ results | length }}</span></h4>
        <hr class="__line">
        <div class="__new">
            <a href="{{ path("new_ad", { id: app.user.getId(),  slug: app.user.getSlug()}) }}"><i class="fas fa-plus-square"></i> Ajouter une annonce</a>
        </div>
        <div class="__item">
            {% for ad in results %}
                {% include '/ads/__ad_profile.html.twig' with {'ad':ad}  %}
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}


