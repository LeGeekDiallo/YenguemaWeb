<div class="__card">
    <div class="__ad_image">
        <img src="{{ asset('images/activity_image/'~activity.getActivityImages()[0].getFilename()) }}" style="height: 100%;" class="card-img-top" alt="activity image">
        <a href="tel:{{ activity.getPhoneNumber() }}" class="__myPolice" style="color: #0D47A1;">
            <i class="fas fa-mobile"></i> Contactez</a>
    </div>
    <div class="card_body">
        <div class="__act_owner">
            {% if not activity.user.userAvatar %}
                <img src="{{ asset('images/avatar_def.png') }}" alt="avatar default">
            {% else %}
                <img src="{{ asset('images/users_avatar/'~activity.user.userAvatar.imageName) }}" alt="avatar default">
            {% endif %}
            <span class="__myPolice">{{ activity.user.username }}</span>
        </div>
        <h5 class="__headLine"><a href="{{ path('act_details', {id:activity.id, slug: csrf_token('slug'~activity.getSlug())}) }}">{{ activity.getActivityName() }} <i class="fas fa-eye"></i></a></h5>
        <h5 class="card-title __myPolice"><i class="fas fa-map-marker-alt"></i> {{ activity.getCity() }} - {{ activity.getMunicipality() }}- {{ activity.getAddress() }}</h5>
        <div class="__myPolice __rate">
            <div class="__likes" data-token_likes="{{ csrf_token('likes'~activity.getId()) }}" data-like="{{ activity.getId() }}" data-route="{{ path('activity_rate', {id: activity.getId(), rate_type:"like"}) }}">
                <span><i class="fas fa-thumbs-up"></i> </span>
                <span class="__cpt_likes" id="{{ csrf_token('likes'~activity.getId()) }}">{{ activity.getLikes() }}</span>
            </div>
            <div class="__unlikes" data-token_unlikes="{{ csrf_token('unlikes'~activity.getId()) }}" data-unlike="{{ activity.getId() }}" data-route="{{ path('activity_rate', {id: activity.getId(), rate_type:"unlike"}) }}">
                <span><i class="fas fa-thumbs-down"></i> </span>
                <span class="__cpt_unlikes" id="{{ csrf_token('unlikes'~activity.getId()) }}">{{ activity.getUnlikes() }}</span>
            </div>
        </div>
    </div>
</div>