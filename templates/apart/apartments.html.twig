{% extends 'base.html.twig' %}

{% block title %}Apartments{% endblock %}

{% block body %}
    <main class="__main">
        <div class="__items">
            <h4 class="__myPolice" style="text-align: center;">Vos annonces <span class="badge bg-danger">{{ results | length }}</span></h4>
            <hr class="__line">
            <div class="__new">
                <a href="{{ path("new_apart", { id: app.user.getId() }) }}"><i class="fas fa-plus-square"></i> Ajouter une annonce</a>
            </div>
            <div class="__item">
                {% for apart in results %}
                    {% include '/apart/__apart_card_profile.html.twig' with {'apart':apart}  %}
                {% endfor %}
            </div>
        </div>
    </main>
    {% include '__footer.html.twig' %}
{% endblock %}


