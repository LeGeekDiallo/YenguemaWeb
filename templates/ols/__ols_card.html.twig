<div class="__card">
    <div class="__prop_card_image">
        <img src="{{ asset('companies_logo/'~ols.getOfficeShopLandImages[random(0, ols.getOfficeShopLandImages|length-1)].getFilename()) }}" alt="logo image">
    </div>
    <div class="__prop_card_body">
        <p>
            <span class="badge badge-primary">{{ ols.propertyType }} <i class="fas fa-arrow-right"></i> </span>
            {{ ols.propertySurface }} <span class="badge badge-danger">mÂ²</span>
            {% if ols.propositionType == 'A louer' %}
                <span class="badge badge-danger">En location</span>
            {% else %}
                <span class="badge badge-danger">En Vente</span>
            {% endif %}
        </p>
        <h5 class="__myPolice">{{ ols.adTitle }}</h5>
        <p>{{ ols.city }}|{{ ols.municipality }}|{{ ols.district }}</p>
        <div class="__prop_price">{{ ols.price | format_number }} FG {% if ols.propositionType == 'A louer' %}/mois {% endif %}</div>
        <p class="__myPolice" style="text-align: end"><a href="{{ path('ols_details', { id:ols.id, slug:csrf_token('ols'~ols.getSlug()) }) }}" style="color: #0d41a1;">
                <i class="fas fa-eye"></i> Voire le {{ ols.propertyType }}</a>
        </p>
        <hr>
        <div class="__prop_owner_avatar">
            <img src="{% if ols.user.useravatar %}
                            {{ asset('images/users_avatar/'~ols.user.useravatar.imageName) }}
                        {% else %}
                            {{ asset('images/avatar_def.png') }}
                      {% endif %}"
                 alt="">
            <p>{{ ols.user.username }}</p>
        </div>
    </div>
</div>

