                            <a class="btn btn-lg" href="{{ path('jobs_universe') }}">Allez sur la page</a>
                        </div>
                    </div>
                    <div class="__draw_image">
                        <img src="{{ asset('images/svg_img/jobs.svg') }}" alt="image svg">
