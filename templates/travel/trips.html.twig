                        <option value="Youmou"></option>
                        <option value="N'Zérékoré"></option>
                    </datalist>
                </div>
                <div class="formAdsSearchColumn">
                    {{ form_label(form_search.destination, "Destination *") }}
                    {{ form_widget(form_search.destination, { 'attr':{'list':'destination_addressList', 'autocomplete':'off'} }) }}
                    <datalist id="destination_addressList">
                        <option value="Conakry"></option>
                        <option value="Boké"></option>
                        <option value="Faranah"></option>
                        <option value="Guékedou"></option>
                        <option value="KanKan"></option>
