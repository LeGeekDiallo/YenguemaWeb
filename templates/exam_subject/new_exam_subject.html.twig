{% extends 'base.html.twig' %}

{% block title %}Contribution nouveau sujet{% endblock %}
{% block body %}
    <div class="__container_form">
        <div class="formBox">
            <div class="__announcement"><h5><i class="fas fa-plus-square"></i> Ajouter un sujet</h5></div>
            {{ form_start(form) }}
            <div class="adRegisterRow">
                <div class="adInputColumn">
                    {{ form_label(form.course_name, "Donnez le nom de l'epreuve *") }}
                    {{ form_widget(form.course_name) }}
                    <small class="form-text">{{ form_errors(form.course_name) }}</small>
                </div>
                <div class="adInputColumn">
                    {{ form_label(form.the_mention, "Donnez la mention *") }}
                    {{ form_widget(form.the_mention) }}
                    <small class="form-text">{{ form_errors(form.the_mention) }}</small>
                </div>
            </div>
            <div class="adRegisterRow">
                <div class="adInputColumn">
                    {{ form_label(form.level, "Donnez le niveau *") }}
                    {{ form_widget(form.level) }}
                    <small class="form-text">{{ form_errors(form.level) }}</small>
                </div>
                <div class="adInputColumn">
                    {{ form_label(form.exam_year, "Donnez l'année de l'examen *") }}
                    {{ form_widget(form.exam_year) }}
                    <small class="form-text">{{ form_errors(form.exam_year) }}</small>
                </div>
                <div class="adInputColumn">
                    {{ form_label(form.school_name, "Donnez le nom de l'établissement *") }}
                    {{ form_widget(form.school_name) }}
                    <small class="form-text">{{ form_errors(form.school_name) }}</small>
                </div>
            </div>
            <div class="adRegisterRow">
                <div class="adInputColumn-1">
                    {{ form_label(form.filename, "Ajoutez le pdf *") }}
                    {{ form_widget(form.filename) }}
                    <small class="form-text">{{ form_errors(form.filename) }}</small>
                </div>
            </div>
            <div class="adRegisterRow">
                <div class="adInputColumn-1">
                    {{ form_label(form.description, "D'autres precisions (facultatif)") }}
                    {{ form_widget(form.description) }}
                    <small class="form-text">{{ form_errors(form.description) }}</small>
                </div>
            </div>
            <div class="newActRegisterRow">
                <button id="submit_btn" class="validate_btn btn btn-rounded btn-block" type="submit">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% include '__footer.html.twig' %}
{% endblock %}


