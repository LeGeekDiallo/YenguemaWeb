{% extends '@email/default/notification/body.html.twig' %}

{% block content %}
    <container>
        <row>
            User Name: {{ user.username }}
        </row>
        <row>
            User Email: {{ user.email }}
        </row>
        <row>
            User state: {{ user.state }}
        </row>
        <row>
            User PhoneNumber : {{ user.phoneNumber }}
        </row>
    </container>
{% endblock %}

{% block action %}
    <button href="{{ url('activate_user', { email: user.email, activate:true }) }}">Activate</button>
{% endblock %}